@model DealnetPortal.Web.Models.ShareableLinkViewModel

<div id="label-steps">
    <div class="dealnet-action-link">Shareable Link</div> >
</div>
<div class="dealnet-large-header main-heading">Shareable Link</div>


<div class="shareable-link-page">
    @using (Html.BeginForm("Index", "ShareableLink", FormMethod.Post, new {id = "mainForm"}))
    {
        @Html.AntiForgeryToken()
        <div class="get-link-section">
            <div class="form-group">
                <div class="labels-hold">
                    <label for="enLink" class="dealnet-field-caption">Form in English</label>
                    <label class="checkbox-toggle">
                        <input @if(Model.EnglishLinkEnabled) { <text>checked</text> } data-val="true" data-val-required="The EnglishLinkEnabled field is required." id="EnglishLinkEnabled" name="EnglishLinkEnabled" type="checkbox" value="true" />
                        <div class="slider"></div>
                        <input name="EnglishLinkEnabled" type="hidden" value="false" />
                    </label>
                </div>
                <div class="controls-hold">
                    <div class="control-group">
                        <input type="url" id="enLink" class="form-control dealnet-input" readonly="readonly" value="@Url.Action("Index", "CustomerForm", new { culture = "en", dealerName = User.Identity.Name }, Request.Url.Scheme)">
                    </div>
                    <button type="button" class="btn dealnet-success-button btn-small" id="copyEn">Copy</button>
                </div>
            </div>
            <div class="form-group">
                <div class="labels-hold">
                    <label for="frLink" class="dealnet-field-caption">Form in French</label>
                    <label class="checkbox-toggle">
                        <input @if(Model.FrenchLinkEnabled) { <text>checked</text> } data-val="true" data-val-required="The FrenchLinkEnabled field is required." id="FrenchLinkEnabled" name="FrenchLinkEnabled" type="checkbox" value="true" />
                        <div class="slider"></div>
                        <input name="FrenchLinkEnabled" type="hidden" value="false" />
                    </label>
                </div>
                <div class="controls-hold">
                    <div class="control-group">
                        <input type="url" id="frLink" class="form-control dealnet-input" readonly="readonly" value="@Url.Action("Index", "CustomerForm", new { culture = "fr", dealerName = User.Identity.Name }, Request.Url.Scheme)">
                    </div>
                    <button type="button" class="btn dealnet-success-button btn-small" id="copyFr">Copy</button>
                </div>
            </div>
        </div>
        <div class="equipment-section">
            <div class="sub-heading">Equipment/service</div>

            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active" id="englishBtn">
                    <a href="#equipment-en" aria-controls="equipment-en" role="tab" data-toggle="tab">
                        English
                    </a>
                </li>
                <li role="presentation" id="frenchBtn">
                    <a href="#equipment-fr" aria-controls="equipment-fr" role="tab" data-toggle="tab">
                        French
                    </a>
                </li>
            </ul>
            <div class="form-group define-equipment-input">
                <label for="enEquipmentTags" class="dealnet-field-caption">Define your equipment/service</label>
                <div class="controls-hold">
                    <div class="control-group">
                        <input type="url" id="enEquipmentTags" class="form-control dealnet-input" value="" placeholder="Type your equipment/service">
                    </div>
                    <button type="button" class="btn dealnet-success-button btn-small" id="addEquipment">Add</button>
                </div>
            </div>
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane active" id="equipment-en">
                    <ul class="equipment-linked-tags tags-list" id="englishTagsList">
                        @if (Model?.EnglishServices != null)
                        {
                            foreach (var service in Model.EnglishServices)
                            {
                                <li><input class="hidden" name="EnglishServices" value="@service">@service <span class="icon-remove" onclick="$(this).parent().remove()"><svg aria-hidden="true" class="icon icon-remove-cross"><use xlink:href="@Url.Content("~/Content/images/sprite/sprite.svg#icon-remove-cross")"></use></svg></span></li>
                            }
                        }
                    </ul>
                </div>
                <div role="tabpanel" class="tab-pane" id="equipment-fr">
                    <ul class="equipment-linked-tags tags-list" id="frenchTagsList">
                        @if (Model?.FrenchServices != null)
                        {
                            foreach (var service in Model.FrenchServices)
                            {
                                <li><input class="hidden" name="FrenchServices" value="@service">@service <span class="icon-remove" onclick="$(this).parent().remove()"><svg aria-hidden="true" class="icon icon-remove-cross"><use xlink:href="@Url.Content("~/Content/images/sprite/sprite.svg#icon-remove-cross")"></use></svg></span></li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    }

    <div class="row save-proceed-btn-hold">
        <div class="col-xs-12 col-md-3 col-lg-3">
            <button class="btn dealnet-button dealnet-success-button block-button" id="saveBtn">
                Save
            </button>
        </div>
    </div>
</div>


@section scripts
{
    @Scripts.Render("~/bundles/shareable-link")
}