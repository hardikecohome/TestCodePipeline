@using DealnetPortal.Api.Models.Contract
@model DealnetPortal.Web.Models.AddressInformation

@{

    var provinces = ViewBag.ProvinceTaxRates as IList<ProvinceTaxRateDTO>;
}

<h4 class="heading-bordered">Address</h4>
<div class="row address-container">
    <div class="col-md-6 col-sm-6">
        <div class="form-group">
            @Html.LabelFor(m => m.Street, new { @class = "mandatory-field" })
            <div class="control-group">
                @Html.TextBoxFor(m => m.Street, new { @class = "form-control dealnet-input" })
                @Html.ValidationMessageFor(m => m.Street, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col-md-2 col-sm-2">
        <div class="form-group">
            @Html.LabelFor(m => m.UnitNumber)
            <div class="control-group">
                <input type="text" id="street" class="form-control dealnet-input">
                @Html.TextBoxFor(m => m.UnitNumber, new { @class = "form-control dealnet-input" })
                @Html.ValidationMessageFor(m => m.UnitNumber, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-4">
        <div class="form-group">
            @Html.LabelFor(m => m.City, new { @class = "mandatory-field" })
            <div class="control-group">
                @Html.TextBoxFor(m => m.City, new { @class = "form-control dealnet-input" })
                @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-6 col-clear-lg-4 col-clear-md-4 col-clear-sm-6">
        <div class="form-group">
            @Html.LabelFor(m => m.Province, new { @class = "mandatory-field" })
            <div class="control-group">
                @Html.DropDownListFor(m => m.Province, (provinces).Select(p => new SelectListItem { Value = p.Province, Text = p.Province }), new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Province, "",new { @class="text-danger"})
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-6">
        <div class="form-group">
            @Html.LabelFor(m => m.PostalCode, new { @class = "mandatory-field" })
            <div class="control-group">
                @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control dealnet-input" })
                @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="col-md-4 col-sm-6 col-clear-sm-6">
        <div class="form-group">
            <div class="dealnet-label hidden-xs hidden-sm">&nbsp;</div>
            <div class="control-group flex-centered-text">
                <a href="#" class="dealnet-disabled-text clear-address">
                    <svg aria-hidden="true" class="icon icon-remove"><use xmlns:xlink="http://www.w3.org/1999/xlink" xlink:href="/client/Content/images/sprite/sprite.svg#icon-remove"></use></svg><span>@Resources.ClearAddress</span>
                </a>
            </div>
        </div>
    </div>
</div>