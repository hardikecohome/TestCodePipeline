@using DealnetPortal.Api.Common.Enumeration
@model RateCardType

@{
    var amortizationSelectList = ((Dictionary<RateCardType, SelectList>)ViewBag.AmortizationTerm).Where(x => x.Key == Model).SelectMany(x => x.Value);
}

<li>
  <div class="rate-card table-mode">
    <div class="equal-height-row-1">
      <div class="rate-card-header">
        <span class="promo-label hidden" id="FixedRatePromo">@Resources.Promo</span>
        <h4 class="rate-card-title">@Resources.StandardRate</h4>
      </div>
    </div>
    <hr>
    <div class="equal-height-row-2">
      <div class="form-group notify-hold">
        <label>Loan/Amortization Term</label>
        @Html.DropDownList(Model + "Amortization", amortizationSelectList, new { @class = "form-control", id = Model + "AmortizationDropdown" })
        @if (ViewBag.totalAmountFinancedFor180amortTerm == 3999)
		{
			<a class="link-over-notify" id="DeferralNotify"
			   data-content="@Resources.Month180AmortOnlyOver4000">
				<svg aria-hidden="true" class="icon icon-info-well"><use xlink:href="@Url.Content("~/Content/images/sprite/sprite.svg#icon-info-well")"></use></svg>
			</a>
		}
		else
		{
			<a class="link-over-notify" id="DeferralNotify"
			   data-content="@Resources.Month180AmortOnlyOver5000">
				<svg aria-hidden="true" class="icon icon-info-well"><use xlink:href="@Url.Content("~/Content/images/sprite/sprite.svg#icon-info-well")"></use></svg>
			</a>

		}
      </div>
    </div>
    <div class="equal-height-row-3">
    </div>
    <div class="equal-height-row-4">
      <div class="clearfix">
        <div class="row form-group">
          &nbsp;
          <div class="col-xs-6 hidden">@Resources.YourCost</div>
          <div class="col-xs-6 text-right text-stronger hidden" id="FixedRateYCostVal"></div>
        </div>
        <div class="row form-group">
          <div class="col-xs-6">@Resources.CustomerRate</div>
          <div class="col-xs-6 text-right text-stronger" id="FixedRateCRate"></div>
        </div>
      </div>
    </div>
    <hr>
    <div class="">
      <div class="row form-group align-middle hidden">
        <div class="col-xs-6">@Resources.AdminFee</div>
        <div class="col-xs-6 text-right text-stronger" id="FixedRateAFee"></div>
      </div>
      <div class="row form-group">
        <div class="col-xs-6 text-stronger">@Resources.MonthlyPayment</div>
        <div class="col-xs-6 text-right text-stronger" id="FixedRateMPayment">-</div>
      </div>
      <div class="row form-group">
        <div class="col-xs-6">@Resources.CostOfBorrowing</div>
        <div class="col-xs-6 text-right text-stronger" id="FixedRateCBorrowing">-</div>
      </div>
      <div class="row form-group">
        <div class="col-xs-6">@Resources.YourCost</div>
        <div class="col-xs-6 text-right text-stronger" id="FixedRateYCost">-</div>
      </div>
      <div class="row form-group">
        <div class="col-xs-6 text-stronger">@Resources.TotalAmountFinanced</div>
        <div class="col-xs-6 text-right text-stronger" id="FixedRateTAFinanced">-</div>
      </div>
      <div class="row form-group">
        <div class="col-xs-6">@Resources.TotalAllMonthlyPayments</div>
        <div class="col-xs-6 text-right text-stronger" id="FixedRateTMPayments">-</div>
      </div>
      <div class="row form-group">
        <div class="col-xs-6">@Resources.BalanceOwingEndOfPayments</div>
        <div class="col-xs-6 text-right text-stronger" id="FixedRateRBalance">-</div>
      </div>
      <div class="row form-group">
        <div class="col-xs-6">@Resources.TotalObligation</div>
        <div class="col-xs-6 text-right text-stronger" id="FixedRateTObligation">-</div>
      </div>
    </div>
    <div id="hidden-option" class="hidden">FixedRate</div>
    <button class="btn dealnet-button dealnet-success-button btn-select-card">
      @Resources.Select
    </button>
  </div>
</li>
