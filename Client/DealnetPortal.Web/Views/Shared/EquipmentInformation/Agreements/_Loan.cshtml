@model DealnetPortal.Web.Models.EquipmentInformation.EquipmentInformationViewModelNew

<div class="row loan-element">
  <div class="col-md-6">
    <div class="row form-group">
      <div class="col-sm-6">@Resources.CashPriceOfEquipment</div>
      <div class="col-sm-6 text-right text-semibold">
        $ <span id="totalEquipmentPrice">-</span>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-sm-6">@(Model.ProvinceTaxRate?.Description ?? Resources.Tax)</div>
      <div class="col-sm-6 text-right text-semibold">
        $ <span id="tax">-</span>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-sm-6">@Resources.TotalCashPrice</div>
      <div class="col-sm-6 text-right text-semibold">
        $ <span id="totalPrice">-</span>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-sm-6">Loan/Amortization Term</div>
      <div class="col-sm-6 text-right text-semibold">
        <span id="displayLoanAmortTerm">-</span>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-sm-6">Customer Rate</div>
      <div class="col-sm-6 text-right text-semibold">
        <span id="displayCustomerRate">-</span> %
      </div>
    </div>
    <div class="row form-group">
      <div class="col-sm-6">Total Amount Financed</div>
      <div class="col-sm-6 text-right text-semibold">
        <span id="displayTFinanced">-</span>
      </div>
    </div>
    <div class="row form-group">
      <div class="col-sm-6 text-semibold">Monthly Payment</div>
      <div class="col-sm-6 text-right text-semibold">
        <span id="displayMPayment">-</span>
      </div>
    </div>
  </div>
</div>