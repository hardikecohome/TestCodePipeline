@using DealnetPortal.Api.Common.Enumeration
@{
    var dealStatus = ContractState.Started;
}
<div id="label-steps">
	<div class="dealnet-action-link">My Deals</div> >
</div>
<!--<div class="dealnet-large-header">My Deals</div>-->
<div class="expand-filter-template">
	<div class="reset-form-inline">
		<div class="label-caption">Filter</div>
		<div class="row">
			<div class="col-sm-6 col-md-3 col-lg-4">
				<div class="form-group">
					<label for="">Deal Status</label>
					<div class="control-group">
						@Html.EnumDropDownListFor(s => dealStatus, null, new { @class = "form-control", id = "deal-status" })
					</div>
				</div>
			</div>
			<div class="col-lg-2 col-md-3 col-sm-6">
				<div class="form-group">
					<label for="">Date From</label>
					<div class="control-group date-group">
						<input type="text" class="form-control date-control" id="date-from">
					</div>
				</div>
			</div>
			<div class="col-lg-2 col-md-3 col-sm-6">
				<div class="form-group">
					<label for="">Date To</label>
					<div class="control-group date-group">
						<input type="text" class="form-control date-control" id="date-to">
					</div>
				</div>
			</div>
			<div class="col-lg-4 col-md-3 col-sm-6">
				<div class="form-group">
					<button class="btn dealnet-button dealnet-success-button block-button" id="filter-button">Filter</button>
				</div>
			</div>
		</div>
	</div>
</div>

<table id="work-items-table" class="display responsive" width="100%">
	<thead>
		<tr>
			<th class="all id-cell">Contract&nbsp;#</th>
			<th class="all customer-cell">Customer</th>
			<th class="min-tablet-p">Status</th>
			<th class="min-desktop">Email</th>
			<th class="min-desktop">Phone</th>
			<th class="min-desktop">Date</th>
			<th class="min-desktop">Equipment</th>
		    <th class="min-desktop">Value</th>
            <th class="min-desktop">RemainingDescription</th>
			<th class="all edit-cell"></th>
		</tr>
	</thead>
</table>
<link href="https://code.jquery.com/ui/1.12.0/themes/base/jquery-ui.css" rel="stylesheet">
@section scripts
{
    <script type="text/javascript">
        var itemsUrl = '@Url.Action("GetWorkItems", "Home")';
        var editContractUrl = '@Url.Action("ContractEdit", "MyDeals")';
    </script>

    @Scripts.Render("~/bundles/my-deals")
}