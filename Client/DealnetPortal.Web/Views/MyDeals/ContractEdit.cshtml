		<div class="documents-container">
		    <div class="row ">
		        <div class="report-documents-list credit-check-info-hold no-vertical-border">
		            <div class="col-md-6 document-col">
		                <div class="dealnet-credit-check-section">
		                    <div class="documents-inner" id="main-documents">
		                        <h3 class="dealnet-section-title">Main Documents</h3>
                                @foreach (var documentType in Model.UploadDocumentsInfo.DocumentTypes)
                                {
                                    if (documentType.Value == "7") { continue; } //For "Other" types
                                    <div class="row form-group document-row">
                                        <label class="dealnet-field-caption col-sm-6">@documentType.Text</label>
                                        <div class="dealnet-field-holder col-sm-6">
                                            <span class="document-item" id="document-type-@(documentType.Value)">
                                                @{
                                                    var document = Model.UploadDocumentsInfo.ExistingDocuments.FirstOrDefault(x => x.DocumentTypeId.ToString() == documentType.Value);
                                                }
                                                @Html.Hidden("documentId", document?.DocumentId)
                                                <a href="#" @(document == null ? "style=display:none;" : "") class="remove-link"><i class="glyphicon glyphicon-remove"></i></a>
                                                <a href="#" class="dealnet-info-link text-semibold file-name">
                                                    @(document?.DocumentName)
                                                </a>
                                            </span>
                                        </div>
                                    </div>
                                }
		                    </div>
		                </div>
		            </div>

		            <div class="col-md-6 document-col full-height">
		                <div class="dealnet-credit-check-section">
		                    <div class="documents-inner" id="other-documents">
		                        <h3 class="dealnet-section-title">Other Documents</h3>
		                        @foreach (var document in Model.UploadDocumentsInfo.ExistingDocuments.Where(x => x.DocumentTypeId == 7))
		                        {
		                            <div class="row form-group document-row">
		                                <div class="dealnet-field-holder col-sm-6">
		                                    <span class="document-item">
                                                @Html.Hidden("documentId", document.DocumentId)
