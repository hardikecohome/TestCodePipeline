@{
    ViewBag.Title = "Home Page";
}

<div class="dealnet-home-page">
    <div class="row">
        <div class="col-md-4 col-lg-4 col-xs-12 col-sm-4">
            <div class="dealnet-page-button">
                <span class="dealnet-button-image dealnet-image-mydeals-btn"></span> @Html.ActionLink("New rental", "BasicInfo", "NewRental", null, new { @class = "dealnet-link" })
            </div>
        </div>
        <div class="col-md-4 col-lg-4 col-sm-4 col-xs-6">
            <div class="dealnet-page-button">
                <span class="dealnet-button-image dealnet-image-mydeals-btn"></span>  @Html.ActionLink("My deals", "MyDeals", "NewRental", null, new { @class = "dealnet-link" })
            </div>
        </div>
        <div class="col-md-4 col-lg-4 col-sm-4 col-xs-6">
            <div class="dealnet-page-button">
                <span class="dealnet-button-image dealnet-image-reports-btn"></span>  @Html.ActionLink("Reports", "Reports", "NewRental", null, new { @class = "dealnet-link" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <h2>My work items</h2>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <table id="work-items-table" class="display"></table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <h2>Deal flow overview</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-1 col-sm-1 col-md-1 col-xs-1">
            <div class="dealnet-chart-switch-button dealnet-chart-switch-button-selected" data-type="Week">Week</div>
        </div>
        <div class="col-lg-1 col-sm-1 col-md-1 col-xs-1">
            <div class="dealnet-chart-switch-button" data-type="Month">Month</div>
        </div>
        <div class="col-lg-1 col-sm-1 col-md-1 col-xs-1">
            <div class="dealnet-chart-switch-button" data-type="Year">Year</div>
        </div>
        <div class="col-lg-9 col-sm-9 col-md-9 col-xs-9">

        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <canvas id="data-flow-overview" style="width: 100%; height: 200px"></canvas>
        </div>

    </div>
</div>



