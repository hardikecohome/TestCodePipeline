@{
    ViewBag.Title = "Home Page";
}

<div class="dealnet-home-page">
    <div class="row">
        <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4">
            <div class="dealnet-page-button new-rental">
                <span class="dealnet-button-image dealnet-image-newrental-btn"></span> @Html.ActionLink("New rental", "BasicInfo", "NewRental", null, new { @class = "dealnet-link" })
            </div>
        </div>
        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
            <div class="dealnet-page-button">
                <span class="dealnet-button-image dealnet-image-mydeals-btn" ></span>  @Html.ActionLink("My deals", "MyDeals", "Stub", null, new { @class = "dealnet-link" })
            </div>
        </div>
        <div class="col-xs-6 col-sm-4 col-md-4 col-lg-4">
            <div class="dealnet-page-button">
                <span class="dealnet-button-image dealnet-image-reports-btn"></span>  @Html.ActionLink("Reports", "Reports", "Stub", null, new { @class = "dealnet-link" })
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <span class="dealnet-caption">My Work Items</span>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <table id="work-items-table" class="display">
                <thead>
                    <tr>
                        <th>Contract</th>
                        <th>Customer</th>
                        <th>Status</th>
                        <th>Action Req.</th>
                        <th>Email</th>
                        <th>Phone</th>
                        <th>Date</th>
                        <th style="width:20px"></th>
                    </tr>
                </thead>                
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <span class="dealnet-caption">Deal Flow Overview</span>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <div class="dealnet-chart-switch-button-hold">
                <div class="dealnet-chart-switch-button dealnet-chart-switch-button-selected" data-type="Week">Week</div>
                <div class="dealnet-chart-switch-button" data-type="Month">Month</div>
                <div class="dealnet-chart-switch-button" data-type="Year">Year</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <canvas id="data-flow-overview"></canvas>
        </div>
    </div>
</div>

<script type="text/javascript">
    var chartUrl = '@Url.Action("GetDealFlowOverview", "Home")';
    var itemsUrl = '@Url.Action("GetWorkItems", "Home")';
    var editItemUrl = '@Url.Action("BasicInfo", "NewRental")';
</script>

