<div class="customer-success-page">
	<div class="customer-success-page-inner">
		<div class="text-center">
			<div class="icon-hold">
				<svg aria-hidden="true" class="icon icon-success-gray-circle"><use xlink:href="@Url.Content("~/Content/images/sprite/sprite.svg#icon-success-gray-circle")"></use></svg>
			</div>
			<div class="customer-success-page-content">
				<strong>Congratulations, @ViewBag.FullName has been pre-approved for $ @ViewBag.CreditAmount</strong>
			</div>
		    <div class="btn-container">
		        <a href="@Url.Action("MyClients", "MortgageBroker")" class="btn dealnet-button dealnet-link-button">My Clients</a>
		    </div>

			<div class="btn-container">
				<a href="@Url.Action("NewClient", "MortgageBroker")" class="btn dealnet-button dealnet-success-button">Add Another Client</a>
			</div>
		</div>
	</div>
</div>