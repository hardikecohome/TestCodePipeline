<div class="row">
    <div class="col-md-12">
        <div class="login-container">
            <div class="dealnet-large-header">Forgot Password</div>
            <form>
                <div class="form-group">
                    <label>Email</label>
                    <div>
                        <input class = "form-control dealnet-input" type="email">
                    </div>
                    <div class="text-center forgot-pass-notify">On this email you will get a new password</div>
                </div>
                <div class="form-group">
                  <div class="row">
                      <div class="col-sm-2"></div>
                          <div class="col-sm-8 col-xs-12 col-lg-12 col-md-12">
                              <input type="submit" class="btn dealnet-button dealnet-green-button" value="Send"/>
                          </div>
                          <div class="col-sm-2"></div>
                      </div>
                  </div>
                </div>
                <div class="form-group text-center">
                    @Html.ActionLink("Login", "Login", "Account", null, new { @class = "" })
                </div>
            </form>
        </div>
    </div>
</div>