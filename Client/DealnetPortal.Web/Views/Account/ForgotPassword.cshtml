@model DealnetPortal.Web.Models.ForgotPasswordViewModel

<div class="row">
    <div class="col-md-12">
        @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { role = "form" }))
        {
            <div class="login-container">
                <div class="dealnet-large-header">@Resources.ForgotPassword</div>
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new {@class = "text-danger"})
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new {@class = ""})
                    <div class="control-group">
                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control dealnet-input", type="email"})
                        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
                    </div>
                    <div class="text-center forgot-pass-notify">@Resources.OnThisEmail</div>
                </div>                
                <div class="form-group">
                    <div class="row">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-8 col-xs-12 col-lg-12 col-md-12">
                            <input type="submit" class="btn dealnet-button dealnet-green-button" value="@Resources.Send"/>
                        </div>
                        <div class="col-sm-2"></div>
                    </div>
                </div>
            </div>            
        }
        <div class="form-group text-center">
            @Html.ActionLink(Resources.Login, "Login", "Account", null, new { @class = "" })
        </div>
    </div>
</div>