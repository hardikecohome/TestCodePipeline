    Func<string, string> formatIncome = str =>
    {
        if(str.Contains('<'))
        {
            return str.Replace("<", Resources.LessThan + " $");
        }
        if(str.Contains('-'))
        {
            return "$" + str.Replace("-", " - $");
        }
        return "$" + str;
    };
