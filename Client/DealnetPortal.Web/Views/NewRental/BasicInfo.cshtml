﻿@Styles.Render("~/Content/basic-info.css")

<div id="label-steps">
    <div class="dealnet-action-link">New Rental</div> >
</div>


<div class="dealnet-large-header" id="basic-info">Basic Info</div>

<div id="steps-line"></div>
<div class="row" id="steps">
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <a href="@Url.Action("BasicInfo")">
            <div class="dealnet-empty-circle">
                <div class="dealnet-green-circle">1</div>
            </div>
        </a>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <div id="step2">
            <div class="dealnet-empty-circle">2</div>
        </div>
        <div id="step3">
            <div class="dealnet-empty-circle">3</div>
        </div>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <div id="step4">
            <div class="dealnet-empty-circle">4</div>
        </div>
    </div>
    <div class="col-xs-3 col-sm-3 col-md-3 col-lg-3">
        <div id="step5">
            <div class="dealnet-empty-circle">5</div>
        </div>
    </div>
</div>

<form>
    <div class="dealnet-middle-header owner-info-label">Home Owner Information</div>

    <div class="row scanlicense-button">
        <div class="col-xs-12 col-md-3 col-lg-3">
            <div type="button" class="btn dealnet-button dealnet-green-button col-xs-12 col-lg-12 col-md-12" id="owner-scan-button" data-toggle="modal" data-target="#camera-modal">
                <p class="dealnet-green-button-text">
                    <img src="~/content/images/icon-scan-licen.png">Scan License
                </p>
            </div>
        </div>
    </div>

    <div class="modal fade" id="camera-modal" role="dialog" data-fnToFill="first-name" data-lnToFill="last-name" data-bdToFill="birth-date">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-body">
                    <div class="dealnet-middle-header">Scan License</div>
                    <div class="dealnet-middle-header-2" id="you-want">How do you want to do this?</div>

                    <ul class="nav nav-tabs" role="tablist">
                        <li id="foldit" role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Use Camera</a></li>
                        <li id="foldit" role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Upload</a></li>
                    </ul>

                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane fade in active" id="home">
                            <div id="capture-area">
                                <video autoplay class="capture-frame" id="video"></video>
                                <canvas id="capture-canvas" class="capture-frame"></canvas>
                                <canvas id="big-capture-canvas"></canvas>
                                <div id="capture-buttons">
                                    <input type="button" class="btn dealnet-button dealnet-green-button big-green-button" id="capture-buttons-1" value="Capture" onclick="takePhoto()"/>
                                    <div id="capture-buttons-2">
                                        <input type="button" class="btn dealnet-button dealnet-green-button big-green-button" id="upload-capture" data-uploadUrl="@Url.Action("RecognizeDriverLicense", "NewRental")" value="Save" onclick="uploadCaptured()"/>
                                        <div id="retake" onclick="retakePhoto()">Retake</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane fade" id="profile">
                            <div id="upload-area">
                                <div id="upload-buttons">
                                    <div class="file-upload btn dealnet-button dealnet-green-button">
                                        <p class="dealnet-green-button-text">
                                            <img src="~/content/images/upload.png">Upload Photo
                                        </p>
                                        <input type="file" class="upload" id="upload-file" data-uploadUrl="@Url.Action("RecognizeDriverLicensePhoto", "NewRental")" onchange="submitUpload()"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row owner-info">
        <div class="col-md-4 col-lg-4">
            First Name
            <input type="text" class="form-control dealnet-input" id="first-name" placeholder="First Name"/>
        </div>
        <div class="col-md-4 col-lg-4">
            Last Name
            <input type="text" class="form-control dealnet-input" id="last-name" placeholder="Last Name"/>
        </div>
        <div class="col-md-4 col-lg-4">
            Date of Birth
            <input type="text" class="form-control dealnet-input" id="birth-date" placeholder="mm/dd/yyyy"/>
        </div>
    </div>

    <div id="additional1-section">
        <div class="dealnet-middle-header owner-info-label">Additional Applicant Information<div id="additional1-remove">x</div></div>

        <div class="row scanlicense-button">
            <div class="col-xs-12 col-md-3 col-lg-3">
                <div type="button" class="btn dealnet-button dealnet-green-button col-xs-12 col-lg-12 col-md-12" id="additional1-scan-button" data-toggle="modal" data-target="#camera-modal">
                    <p class="dealnet-green-button-text">
                        <img src="~/content/images/icon-scan-licen.png">Scan License
                    </p>
                </div>
            </div>
        </div>

        <div class="row owner-info">
            <div class="col-md-4 col-lg-4">
                First Name
                <input type="text" class="form-control dealnet-input" id="additional-first-name-1" placeholder="First Name" />
            </div>
            <div class="col-md-4 col-lg-4">
                Last Name
                <input type="text" class="form-control dealnet-input" id="additional-last-name-1" placeholder="Last Name" />
            </div>
            <div class="col-md-4 col-lg-4">
                Date of Birth
                <input type="text" class="form-control dealnet-input" id="additional-birth-date-1" placeholder="mm/dd/yyyy" />
            </div>
        </div>
    </div>

    <div id="additional2-section">
        <div class="dealnet-middle-header owner-info-label">Additional Applicant Information<div id="additional2-remove">x</div></div>

        <div class="row scanlicense-button">
            <div class="col-xs-12 col-md-3 col-lg-3">
                <div type="button" class="btn dealnet-button dealnet-green-button col-xs-12 col-lg-12 col-md-12" id="additional2-scan-button" data-toggle="modal" data-target="#camera-modal">
                    <p class="dealnet-green-button-text">
                        <img src="~/content/images/icon-scan-licen.png">Scan License
                    </p>
                </div>
            </div>
        </div>

        <div class="row owner-info">
            <div class="col-md-4 col-lg-4">
                First Name
                <input type="text" class="form-control dealnet-input" id="additional-first-name-2" placeholder="First Name" />
            </div>
            <div class="col-md-4 col-lg-4">
                Last Name
                <input type="text" class="form-control dealnet-input" id="additional-last-name-2" placeholder="Last Name" />
            </div>
            <div class="col-md-4 col-lg-4">
                Date of Birth
                <input type="text" class="form-control dealnet-input" id="additional-birth-date-2" placeholder="mm/dd/yyyy" />
            </div>
        </div>
    </div>

    <div id="additional3-section">
        <div class="dealnet-middle-header owner-info-label">Additional Applicant Information<div id="additional3-remove">x</div></div>

        <div class="row scanlicense-button">
            <div class="col-xs-12 col-md-3 col-lg-3">
                <div type="button" class="btn dealnet-button dealnet-green-button col-xs-12 col-lg-12 col-md-12" id="additional3-scan-button" data-toggle="modal" data-target="#camera-modal">
                    <p class="dealnet-green-button-text">
                        <img src="~/content/images/icon-scan-licen.png">Scan License
                    </p>
                </div>
            </div>
        </div>

        <div class="row owner-info">
            <div class="col-md-4 col-lg-4">
                First Name
                <input type="text" class="form-control dealnet-input" id="additional-first-name-3" placeholder="First Name" />
            </div>
            <div class="col-md-4 col-lg-4">
                Last Name
                <input type="text" class="form-control dealnet-input" id="additional-last-name-3" placeholder="Last Name" />
            </div>
            <div class="col-md-4 col-lg-4">
                Date of Birth
                <input type="text" class="form-control dealnet-input" id="additional-birth-date-3" placeholder="mm/dd/yyyy" />
            </div>
        </div>
    </div>

    <div id="add-additional-applicant">
            <div>
                <img src="~/Content/images/add-app.png" />Add additional applicant
            </div>
        </div>

        <p id="address-info-label" class="dealnet-middle-header">Adress Information</p>

        <div class="row">
            <div class="col-xs-12 col-md-3 col-lg-3">
                <div class="btn dealnet-button dealnet-green-button col-xs-12 col-lg-12 col-md-12" onclick="autodetectAddress()">
                    <p class="dealnet-green-button-text">
                        <img src="~/content/images/get-location.png">Get My Location
                    </p>
                </div>
            </div>
        </div>

        <div class="row" id="address-info1">
            <div class="col-md-6 col-lg-6">
                Installation Adress
                <input type="text" class="form-control dealnet-input" id="street" placeholder="St." />
            </div>
            <div class="col-md-2 col-lg-2">
                Unit #
                <input type="text" class="form-control dealnet-input" id="unit_number" placeholder="12345" />
            </div>
            <div class="col-md-4 col-lg-4">
                City
                <input type="text" class="form-control dealnet-input" id="locality" placeholder="Ottawa" />
            </div>
        </div>

        <div class="row" id="address-info2">
            <div class="col-md-4 col-lg-4">
                Province
                <input type="text" class="form-control dealnet-input" id="administrative_area_level_1" placeholder="Nepean" />
            </div>
            <div class="col-md-4 col-lg-4">
                Postal Code
                <input type="text" class="form-control dealnet-input" id="postal_code" placeholder="12345" />
            </div>
            <div class="col-md-4 col-lg-4 dealnet-disabled-text clear-address" id="clear-address">
                <p>
                    <div class="dealnet-gray-circle">x</div>
                    Clear Address
                </p>
            </div>
        </div>

        <p id="mailing-adress-different">
            <input type="checkbox" class="dealnet-checkbox" id="mailing-adress-checkbox" />Mailing adress is different
        </p>

        <div id="mailing-adress">
            <div class="row" id="mailing-adress1">
                <div class="col-md-6 col-lg-6">
                    Mailing Adress
                    <input type="text" class="form-control dealnet-input" id="mailing_street" placeholder="St." />
                </div>
                <div class="col-md-2 col-lg-2">
                    Unit #
                    <input type="text" class="form-control dealnet-input" id="mailing_unit_number" placeholder="12345" />
                </div>
                <div class="col-md-4 col-lg-4">
                    City
                    <input type="text" class="form-control dealnet-input" id="mailing_locality" placeholder="Ottawa" />
                </div>
            </div>

            <div class="row" id="mailing-adress2">
                <div class="col-md-4 col-lg-4">
                    Province
                    <input type="text" class="form-control dealnet-input" id="mailing_administrative_area_level_1" placeholder="Nepean" />
                </div>
                <div class="col-md-4 col-lg-4">
                    Postal Code
                    <input type="text" class="form-control dealnet-input" id="mailing_postal_code" placeholder="12345" />
                </div>
                <div class="col-md-4 col-lg-4 dealnet-disabled-text clear-address" id="clear-mailing-address">
                    <p>
                        <div class="dealnet-gray-circle">x</div>
                        Clear Address
                    </p>
                </div>
            </div>
        </div>

        <div class="row" id="saveproceed-button">
            <div class="col-xs-12 col-md-3 col-lg-3">
                <button class="btn dealnet-button dealnet-green-button col-xs-12 col-lg-12 col-md-12">
                    <p class="dealnet-green-button-text">Save and Proceed</p>
                </button>
            </div>
        </div>
</form>

<link href="http://code.jquery.com/ui/1.10.4/themes/ui-lightness/jquery-ui.css" rel="stylesheet">
@Scripts.Render("~/bundles/basic-info")

@section scripts
{
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDaQqymsNuummVv7Yi9I2kgGl0lxDjZri4&libraries=places&callback=initGoogleServices" async defer></script>
}

