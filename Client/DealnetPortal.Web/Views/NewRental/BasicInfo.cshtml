            <div class="col-md-12">
                <button type="button" class="btn dealnet-button dealnet-success-button" id="owner-scan-button" data-toggle="modal" data-target="#camera-modal">
                    <svg aria-hidden="true" class="icon icon-svg icon-scan-licence"><use xlink:href="#icon-scan-licence"></use></svg>
                    <span>Scan Licence</span>
                </button>
                <span class="scanlicense-notify">Scan license and this info will be filled out automatically</span>
            </div>
        </div>
    }
    else
    {
        <div class="row scanlicense-button">
            <div class="col-md-12">
                <div class="file-upload btn dealnet-button dealnet-success-button" id="owner-scan-button">
                    <svg aria-hidden="true" class="icon icon-svg icon-scan-licence"><use xlink:href="#icon-scan-licence"></use></svg>
                    <span>Scan Licence</span>
                    <input type="file" accept="image/*" class="upload" id="owner-upload-file" onchange="submitUpload(this, '@Url.Action("RecognizeDriverLicensePhoto", "NewRental")', 'first-name', 'last-name', 'birth-date', true)"/>
                </div>
            </div>
        </div>
    }

    if (!ViewBag.IsMobileRequest)
    {
        <div class="modal fade" id="camera-modal" role="dialog" data-fnToFill="first-name" data-lnToFill="last-name" data-bdToFill="birth-date" data-fillAddress="true">
