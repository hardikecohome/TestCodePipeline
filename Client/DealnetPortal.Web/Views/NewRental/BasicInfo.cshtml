@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.ContractId)
    <div class="dealnet-middle-header owner-info-label">Home Owner Information</div>

    if (!ViewBag.IsMobileRequest)
    {
        <div class="row scanlicense-button">
            <div class="col-xs-12 col-md-3 col-lg-3">
                <div type="button" class="btn dealnet-button dealnet-green-button col-xs-12 col-lg-12 col-md-12" id="owner-scan-button" data-toggle="modal" data-target="#camera-modal">
                    <p class="dealnet-green-button-text">
                        <img src="~/content/images/icon-scan-licen.png">Scan Licence
                    </p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row scanlicense-button">
            <div class="col-xs-12 col-md-3 col-lg-3">
                <div class="file-upload btn dealnet-button dealnet-green-button col-xs-12 col-lg-12 col-md-12" id="owner-scan-button">
                    <p class="dealnet-green-button-text">
                        <img src="~/content/images/icon-scan-licen.png">Scan Licence
                    </p>
                    <input type="file" accept="image/*" class="upload" id="owner-upload-file" onchange="submitUpload(this, '@Url.Action("RecognizeDriverLicensePhoto", "NewRental")', 'first-name', 'last-name', 'birth-date', true)"/>
                </div>
            </div>
        </div>
    }

    if (!ViewBag.IsMobileRequest)
    {
        <div class="modal fade" id="camera-modal" role="dialog" data-fnToFill="first-name" data-lnToFill="last-name" data-bdToFill="birth-date" data-fillAddress="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-body">
                        <div class="dealnet-middle-header">Scan Licence</div>
                        <div class="dealnet-middle-header-2" id="you-want">How do you want to do this?</div>

                        <ul class="nav nav-tabs" role="tablist">
                            <li id="foldit" role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Use Camera</a></li>
                            <li id="foldit" role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Upload</a></li>
                        </ul>

                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane fade in active" id="home">
                                <div id="capture-area">
                                    <video autoplay class="capture-frame" id="video"></video>
                                    <canvas id="capture-canvas" class="capture-frame"></canvas>
                                    <canvas id="big-capture-canvas"></canvas>
                                    <div id="capture-buttons">
                                        <input type="button" class="btn dealnet-button dealnet-green-button big-green-button" id="capture-buttons-1" value="Capture" onclick="takePhoto()"/>
                                        <div id="capture-buttons-2">
                                            <input type="button" class="btn dealnet-button dealnet-green-button big-green-button" id="upload-capture" value="Save" onclick="uploadCaptured('@Url.Action("RecognizeDriverLicense", "NewRental")')"/>
                                            <div id="retake" onclick="retakePhoto()">Retake</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane fade" id="profile">
                                <div id="upload-area">
                                    <div id="upload-buttons">
                                        <div class="file-upload btn dealnet-button dealnet-green-button" id="upload-file-button">
                                            <p class="dealnet-green-button-text">
                                                <img src="~/content/images/upload.png">Upload Photo
                                            </p>
                                            <input type="file" class="upload" id="upload-file" onchange="submitUpload(this, '@Url.Action("RecognizeDriverLicensePhoto", "NewRental")')"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row owner-info">
        <div class="col-md-4 col-lg-4">
            First Name
            @Html.TextBoxFor(m => m.HomeOwner.FirstName, new { @class = "form-control dealnet-input", id = "first-name", placeholder = "First Name" })
            @Html.ValidationMessageFor(m => m.HomeOwner.FirstName, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-4 col-lg-4">
