@{
    ViewBag.Title = "Apply for financing";
    var creditAmount = ViewBag.CreditAmount;
    var dealername = ViewBag.DealerName;
    var street = ViewBag.Street;
    var city = ViewBag.City;
    var province = ViewBag.Province;
    var postalCode = ViewBag.PostalCode;
    var phone = ViewBag.Phone;
    var email = ViewBag.Email;
}

<div class="customer-loan-success-page align-middle-section">
    <div class="align-middle-inner">
        <svg aria-hidden="true" class="icon icon-success"><use xlink:href="@Url.Content("~/Content/images/sprite/sprite.svg#icon-success")"></use></svg>
        <h2 class="page-heading">Congratulations, you have been pre-approved for $@creditAmount</h2>
        <p>Your financing application was successfully submitted. @dealername will contact you soon.</p>

        <div class="contact-section">
            <div>If you have any question please contact:</div>
            <div class="vcard">
                <div class="fn org">@dealername</div>
                <div class="adr">
                    <span class="street-address">@street</span>,
                    <span class="locality hidden">@city</span>
                    <span class="region">@province</span> <span class="postal-code">@postalCode</span>
                </div>
                <div>Phone: <a href="@phone" class="tel" rel="nofollow"><span class="type hidden">Work</span>@phone</a></div>
                <div>Mail: <a class="email" href="@email">@email</a></div>
            </div>
        </div>
    </div>
</div>

