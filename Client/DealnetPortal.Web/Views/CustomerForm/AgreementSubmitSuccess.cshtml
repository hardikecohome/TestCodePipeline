@model DealnetPortal.Web.Models.SubmittedCustomerFormViewModel
@{
    ViewBag.Title = "Apply for financing";
}

<div class="customer-loan-success-page align-middle-section">
    <div class="align-middle-inner">
        <svg aria-hidden="true" class="icon icon-success"><use xlink:href="@Url.Content("~/Content/images/sprite/sprite.svg#icon-success")"></use></svg>
        <h2 class="page-heading">Congratulations, you have been pre-approved for $@($"{Model.CreditAmount:0,00}")</h2>
        <p>Your financing application was successfully submitted. @(Model.DealerName) will contact you soon.</p>

        <div class="contact-section">
            <div>If you have any question please contact:</div>
            <div class="vcard">
                <div class="fn org">@Model.DealerName</div>
                <div class="adr">
                    <span class="street-address">@Model.Street</span>,
                    <span class="locality">@Model.City, </span>
                    <span class="region">@Model.Province</span>, <span class="postal-code">@Model.PostalCode</span>
                </div>
                <div>Phone: <a href="@Model.Phone" class="tel" rel="nofollow"><span class="type hidden">Work</span>@Model.Phone</a></div>
                <div>Mail: <a class="email" href="@Model.Email">@Model.Email</a></div>
            </div>
        </div>
    </div>
</div>

